<% if (content.link.type == "internal") { %>
  <% let link = (content.link.page == "home" ? "" : content.link.page) %>
  <a href="<%- site.url + link %>" >
<% } else if (content.link.type == "external") { %>
  <a href="<%- content.link.link %>" target="_blank">
<% } else if (content.link.type == "scroll") { %>
  <button class="btn scroll" data-scroll="<%- content.link.scroll %>" type="button" name="button" ></button>
<% } %>
<div class="card-with-link">
  <span class="card-icon">
    <%- include("../../components/icon-svg", {id:"arrow"})%>
  </span>
  <h2 class="card-heading"><%- content.heading %></h2>
  <p class="card-body"><%- content.paragraph %></p>
</div>
</a>