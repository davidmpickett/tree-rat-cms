<div class="col image-card">
  <div class="card h-100 shadow-sm <%- extraClass %>">

    <button class="btn" type="button" 
            data-bs-target="#imageEditModal" data-bs-toggle="modal"
            data-cms="<%- site.url %>admin/assets/images/original/<%- image.name %>">
      <img class="card-img-top img-fluid" 
            src="<%- site.url %>admin/assets/images/original/thumb/<%- image.name %>" alt="<%- image.alt %>" height="300" width="300"/>
    </button>

    <div class="card-body">
      <form id="image<%- index %>">

        <div class="form-floating mb-2">
          <textarea class="form-control tall" placeholder="Write alt text here" id="" name="alt" ><%- image.alt %></textarea>
          <label for="">Alt Text</label>
        </div>
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <small><strong><%- image.name %></strong></small><br>
            <small><%- image.width %>w x <%- image.height %>h</small>
          </div>
          <div class="btn-group">
            <%- include("button", 
                      {arg:{text: "Save", 
                      color:"success", 
                      extraClass:"image-alt-update", 
                      cms: image.name,
                      cmsForm: "image"+index}}) %>
          <button class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="visually-hidden">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu btn-success">
            <li>
              <%- include("button", 
                        {arg:{text: "Delete", 
                        color:"danger", 
                        extraClass:"image-delete dropdown-item", 
                        cms: image.name}}) %>
            </li>
          </ul>
        </div>
      </form>
      </div>
    </div>
  </div>
</div>