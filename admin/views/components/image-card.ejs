<div class="col card-image">
  <div class="card h-100 shadow-sm <%- extraClass %>">

    <button class="btn" type="button" 
            data-bs-target="#imageEditModal" data-bs-toggle="modal"
            data-cms="<%- site.url %>admin/assets/images/original/<%- image.name %>">
      <img class="card-img-top img-fluid" 
            src="<%- site.url %>admin/assets/images/original/thumb/<%- image.name %>" alt="<%- image.alt %>" height="300" width="300"/>
    </button>

    <div class="card-body">
      <form id="image<%- index %>">
        <div class="form-floating mb-2">
          <textarea class="form-control tall" placeholder="Write alt text here" id="<%- image.name %>-alt" name="alt" ><%- image.alt %></textarea>
          <label for="<%- image.name %>-alt">Alt Text</label>
        </div>
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <small><%- image.width %>w x <%- image.height %>h</small>
          </div>

          <div class="button-group">
            <%- include("button", 
                        {arg:{text: "Save", 
                        color:"action", 
                        extraClass:"image-alt-update", 
                        cms: image.name,
                        cmsForm: "image"+index}}) %>
            <button type="button" class="button button-action button-toggle">
              <%- include("icon-svg", {id:"three-dots", 
                                     color: "black", 
                                     width: 18}) %>
              <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <div class="button-drop">
              <%- include("button", 
                        {arg:{text: "Delete", 
                        color:"danger", 
                        extraClass:"image-delete button-drop-item", 
                        cms: image.name}}) %>
            </div>
          </div>

      </form>
      </div>
    </div>
  </div>
</div>