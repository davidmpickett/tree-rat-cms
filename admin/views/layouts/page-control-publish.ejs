<%- include("../components/page-link") %>

<span class="btn-group dropdown-center">
  <%- include("../components/button", {arg:{text: "Publish", 
                                        color:"success", 
                                        extraClass:"create", 
                                        cmsForm: "pageForm", 
                                        cmsText: "Publishing Page", 
                                        cmsUrl:site.url+"admin/publish/"+page.link, 
                                        cmsAnchor:"publish-anchor"}})
                                        %>
  <!-- Published -->
  <% if (page.publishedDate) { %>
  <button class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
    <span class="visually-hidden">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu btn-success">
    <li>
      <%- include("../components/button", {arg:{text: "Recall", 
                                          color:"danger", 
                                          extraClass:"delete dropdown-item",
                                          cms: page.link, 
                                          cmsUrl: site.url+"admin/publish",
                                          cmsText: "Do you really want to recall:",
                                          cmsAnchor:"publish-anchor"}}) %>
    <% } %>
    </li>
  </ul>
</span>