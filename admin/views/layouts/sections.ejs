<% if (!page.sections) page.sections = {} %> <% for (let i =0; i < page.sections.length; i++) { %>

<div class="accordion-item cms-section">
  <div class="row align-items-baseline">
    <div class="col-1 handle">
      <svg
        viewBox="0 0 16 16"
        width="40"
        xmlns="http://www.w3.org/2000/svg"
        class="text-secondary mx-1"
        fill="currentColor">
        <use xlink:href="<%= site.url %>admin/assets/sprites.svg#grip-horizontal" />
      </svg>
    </div>
    <h2 class="col-11 accordion-header">
      <button
        class="accordion-button collapsed"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapse<%= i %>"
        aria-expanded="true"
        aria-controls="collapse<%= i %>">
        <%= page.sections[i].template %>
      </button>
    </h2>
  </div>
  <div id="collapse<%= i %>" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
    <div class="accordion-body">
      <input type="text" name="sections[<%= i %>][template]" value="<%= page.sections[i].template %>" hidden />
      <%- include("../../../views/sections/"+page.sections[i].template+"/admin-"+page.sections[i].template, { index :
      "sections["+i+"][content]", content : page.sections[i].content }) %>
      <div class="mt-2 d-flex justify-content-end">
        <button class="btn btn-danger section-delete" data-cms="<%= page.sections[i].template %>" type="button">
          Delete
        </button>
      </div>
    </div>
  </div>
</div>

<% } %>
