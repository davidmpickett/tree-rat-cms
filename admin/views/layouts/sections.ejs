<% if (!page.sections) page.sections = {} %>
<% for (let i =0; i < page.sections.length; i++) { %>

<div class="accordion-item">
  <h2 class="accordion-header">
    <button
      class="accordion-button collapsed"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#collapse<%= i %>"
      aria-expanded="true"
      aria-controls="collapse<%= i %>">
      <%= page.sections[i].template %>
    </button>
  </h2>
  <div id="collapse<%= i %>" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
    <div class="accordion-body cms-section">
      <input type="text" name="sections[<%= i %>][template]" value="<%= page.sections[i].template %>" hidden />
      <%- include("../../../views/sections/"+page.sections[i].template+"/admin-"+page.sections[i].template, { index : "sections["+i+"][content]", content : page.sections[i].content }) %>
    </div>
  </div>
</div>

<% } %>
