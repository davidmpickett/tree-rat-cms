<!-- Modal -->
<div class="modal fade mt-5" id="imageSelectModal" tabindex="-1" aria-labelledby="imageSelectModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="imageSelectModalLabel">Select Image</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% for (image of site.images) { %>
          <button class="btn image-change" type="button" data-cms-image=<%- image.name %> data-cms-folder="<%- site.url %>admin/assets/images/original/" data-bs-dismiss="modal">
            <img src="<%- site.url %>admin/assets/images/original/thumb/<%- image.name %>" alt="">

          </button>
        <% } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
